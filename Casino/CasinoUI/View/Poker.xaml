<Window x:Class="CasinoUI.View.Poker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasinoUI.View"
        mc:Ignorable="d"
        Title="Poker" Height="450" Width="800" FocusManager.FocusedElement="{Binding ElementName=MyCanvas}"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="TableBlueBackground"/>
        </Grid.Background>
        <Label Content="Dealer" HorizontalAlignment="Left" Margin="360,130,0,0" VerticalAlignment="Top" Width="55" Height="35" FontSize="15"/>
        <Canvas x:Name="MyCanvas" Focusable="True">
        </Canvas>
    </Grid>
</Window>
