<Window x:Class="CasinoUI.Views.BlackJack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasinoUI.Views"
        mc:Ignorable="d"
        Title="BlackJack" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="ImgBackground"/>
        </Grid.Background>
        <Image x:Name="ImgBlackJackTable" 
               Grid.RowSpan="10" Grid.ColumnSpan="10"/>
    </Grid>
</Window>
